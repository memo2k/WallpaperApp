@model WallpaperModel

<section class="section-form">
    <form asp-action="Add" method="post">
        <input asp-for="@Model.UserId" hidden>
        <div class="form">
            <div class="form__head">
                <h2>Upload Wallpaper</h2>
            </div>

            <div class="form__body">
                <div class="form__row">
                    <label asp-for="Title" class="form__label"></label>

                    <div class="form__field">
                        <input asp-for="Title" class="field" placeholder="Title..."/>
                    </div>

                    <span asp-validation-for="Title" class="form__validation"></span>
                </div>

                <div class="form__row">
                    <label asp-for="Camera" class="form__label"></label>

                    <div class="form__field">
                        <input asp-for="Camera" class="field" placeholder="Camera..." />
                    </div>

                    <span asp-validation-for="Camera" class="form__validation"></span>
                </div>

                <div class="form__row">
                    <label asp-for="ImageUrl" class="form__label"></label>

                    <div class="form__field">
                        <input asp-for="ImageUrl" class="field" placeholder="Image link..." />
                    </div>

                    <span asp-validation-for="ImageUrl" class="form__validation"></span>
                </div>

                <div class="form__select">
                    <div class="form__row--select">
                        <label asp-for="CategoryId" class="form__label"></label>
                        
                        <div class="form__field">
                            <select asp-for="CategoryId">
                                @foreach (var category in Model.WallpaperCategories) {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form__row--select">
                        <label asp-for="ResolutionId" class="form__label"></label>

                        <div class="form__field">
                            <select asp-for="ResolutionId">
                                @foreach (var resolution in Model.WallpaperResolutions)
                                {
                                    <option value="@resolution.Id">@resolution.Size</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form__actions">
                <input class="btn btn--blue" type="submit" value="Upload" />
            </div>
        </div>
    </form>
</section>