@model WallpaperServiceModel

<div class="post">
    <div class="post__image">
        <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@Model.Id">
            <img src="@Model.ImageUrl" alt="">
        </a>
    </div>

    <div class="post__details">
        <div class="post__author">
            @*<a href="#">
                <img src="@Model.ImageUrl" alt="pfp">
            </a>*@

            <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@Model.Id">@Model.User.UserName</a>
        </div>

        <div class="post__actions">
            <div>@Model.Likes</div>

            <button type="button" class="btn btn--like"><i class="fa-regular fa-heart fa-xl"></i></button>

            <button type="button" class="btn btn--like"><i class="fa-regular fa-bookmark fa-xl"></i></button>
        </div>
    </div>
</div>