@model WallpaperServiceModel

<div class="post">
    <div class="post__image">
        <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@Model.Id">
            <img src="@Model.ImageUrl" alt="">
        </a>
    </div>

    <div class="post__details">
        <div class="post__author">
            <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a>
        </div>

        @if (User.Identity.IsAuthenticated) {
            <div class="post__actions">
                <form asp-area="" asp-controller="Like" asp-action="Like"
                  asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn--like"><i class="fa-regular fa-heart fa-xl"></i></button>
                </form>

                <form asp-area="" asp-controller="Favorite" asp-action="Add"
                  asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn--favorite"><i class="fa-regular fa-star fa-xl"></i></button>
                </form>
            </div>
        }
        
    </div>
</div>