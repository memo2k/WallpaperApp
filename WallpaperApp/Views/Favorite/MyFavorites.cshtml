@model IEnumerable<WallpaperServiceModel>

@foreach(var favorite in Model) {
    <div class="post">
        <div class="post__image">
            <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@favorite.Id">
                <img src="@favorite.ImageUrl" alt="">
            </a>
        </div>

        <div class="post__details">
            <div class="post__author">
                @*<a href="#">
            <img src="@Model.ImageUrl" alt="pfp">
            </a>*@

                <a asp-area="" asp-controller="Wallpaper" asp-action="Details" asp-route-id="@favorite.Id">@favorite.User.UserName</a>
            </div>

            <div class="post__actions">
                <form asp-area="" asp-controller="Like" asp-action="Like"
                  asp-route-id="@favorite.Id" method="post">
                    <button type="submit" class="btn btn--like"><i class="fa-regular fa-heart fa-xl"></i></button>
                </form>


                <form asp-area="" asp-controller="Favorite" asp-action="Remove"
                  asp-route-id="@favorite.Id" method="post">
                    <button type="submit" class="btn btn--like"><i class="fa-regular fa-bookmark fa-xl"></i></button>
                </form>
            </div>
        </div>
    </div>
}