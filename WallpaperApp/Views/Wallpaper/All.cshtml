@model AllWallpapersQueryModel

@{
    ViewBag.Title = "All Wallpapers";
}

<section class="hero">
    <div class="shell">
        <div class="hero__inner">
            <div class="hero__title">
                <h1>WallApp</h1>
            </div>

            <div class="hero__details">
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo nisi rem iusto harum, illum rerum earum voluptate magnam qui cupiditate aspernatur maiores necessitatibus officiis! Culpa, cupiditate. Autem quisquam officia quod.</p>
            </div>
        </div>
    </div>
</section>

<div class="section-form__filter">
    <div class="shell">
        <form method="get">
            <div class="form-filter">
                <div class="form__body">
                    <div class="form__col">
                        <div class="form__label">
                            <label asp-for="SearchTerm">Search</label>
                        </div>

                        <input asp-for="SearchTerm" placeholder="...">
                    </div>

                    <div class="form__col">
                        <div class="form__label">
                            <label asp-for="Sorting"></label>
                        </div>
                        
                        <select asp-for="Sorting">
                            <option value="0">Latest</option>
                            <option value="1">Popular</option>
                        </select>
                    </div>

                    <div class="form__col">
                        <div class="form__label">
                            <label asp-for="Category"></label>
                        </div>
                        
                        <select asp-for="Category">
                            <option value="">All</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category">@category</option>
                            }
                        </select>
                    </div>

                    <div class="form__col">
                        <div class="form__label">
                            <label asp-for="Resolution"></label>s
                        </div>
                         
                         <select asp-for="Resolution">
                             <option value="">All</option>
                             @foreach (var resolution in Model.Resolutions)
                             {
                                 <option value="@resolution">@resolution</option>
                             }
                         </select>
                    </div>
                </div>

                <div class="form__actions">
                    <input type="submit" value="Search" class="btn btn--blue" />
                </div>
            </div>
        </form>
    </div>
</div>

<section class="posts">
    <div class="posts__feed">
        @foreach (var wallpaper in Model.Wallpapers)
        {
            <partial name="_WallpaperPartial" model="@wallpaper" />
        }
    </div>
</section>