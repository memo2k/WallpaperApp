@model IEnumerable<WallpaperIndexModel>

@{
    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <div class="shell">
        <div class="hero__inner">
            <div class="hero__title">
                <h1>WallApp</h1>
            </div>

            <div class="hero__details">
                <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Illo nisi rem iusto harum, illum rerum earum voluptate magnam qui cupiditate aspernatur maiores necessitatibus officiis! Culpa, cupiditate. Autem quisquam officia quod.</p>
            </div>
        </div>
    </div>
</section>

@if (Model.Count() == 0) 
{
    <div>no posts</div>
}
else 
{
    <section class="posts">
        <div class="posts__feed">
            @foreach (var wallpaper in Model) 
            {
                <div class="post">
                    <div class="post__image">
                        <a href="#">
                            <img src="@wallpaper.ImageUrl" alt="">
                        </a>
                    </div>

                    <div class="post__details">
                        <div class="post__author">
                            <a href="#">
                                <img src="@wallpaper.ImageUrl" alt="pfp">
                            </a>

                            <a href="#">User</a>
                        </div>

                        <div class="post__actions">
                            <button type="button" class="btn btn--like"><i class="fa-regular fa-heart fa-xl"></i></button>

                            <a href="#"><i class="fa-solid fa-ellipsis-vertical fa-xl"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
}
